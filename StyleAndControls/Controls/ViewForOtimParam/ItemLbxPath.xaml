<UserControl x:Class="StyleAndControls.Controls.ViewForOtimParam.ItemLbxPath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="UserControl" Height="28" Width="250">

    <Grid x:Name="LayoutRoot">
        <Grid>
            <TextBox     Margin="130,2,0,0" TextWrapping="NoWrap" Text="TextBox" HorizontalAlignment="Left" Width="91" Height="24" VerticalAlignment="Top" x:Name="Txbx" />
            <TextBlock Cursor="Help" Foreground="White" Height="17" HorizontalAlignment="Left" Name="Txbl" VerticalAlignment="Top" Width="120" Margin="0,5.5,0,0" >
                <TextBlock.ToolTip>
                    <ToolTip>
                        <DockPanel Width="250" >
                            <TextBlock TextWrapping="Wrap" Name="TxblToolTip"></TextBlock>
                        </DockPanel>
                    </ToolTip>
                </TextBlock.ToolTip> 
			</TextBlock>
            <Button Content="..." Height="23" Margin="0,2,0,0" x:Name="BtnPath" VerticalAlignment="Top"  Style="{StaticResource Points3_ButtonStyle}" TabIndex="2" Click="BtnPath_OnClick"  HorizontalAlignment="Right" Width="24" />
        </Grid>
    </Grid>
</UserControl>
